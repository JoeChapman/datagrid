header
    overflow: hidden;

    .ui-app-brand
        float: left;
        color: #515151;
        font-size: 35px;

        em
            color: #dd8800;
            font-style: normal;

    [role='search']
        float: right;

        li
            display: inline-block;
            padding: 0 14px;

            &:first-child
                border-right: 1px solid #e4e4e4;

            &:last-child
                padding: 0;

            input
                background: #fafafa url('/img/sprites.png') no-repeat 5px 8px;
                border: 1px solid #c5c5c5;
                border-radius: 3px;
                padding: 7px 4px 7px 20px;
                width: 210px;
                box-shadow: inset 1px 1px 1px #c5c5c5;