[role='navigation']
    border: 1px solid #cacad2;
    border-radius: 3px;
    overflow: hidden;
    background-image: linear-gradient(#f6f6f6, #eef0f0);

    li
        border-right: 1px solid #cacad2;
        display: inline-block;

        a
            border-left: 1px solid #fff;
            border-top: 1px solid #fff
            font-weight: bold;
            color: #8e989f;
            display: block;
            padding: 10px;
            text-shadow: 0 1px 1px #fff;

        &.active
            background-image: linear-gradient(#d8d8d8, #e9e9e9);
            a
                text-shadow: 0 -1px 1px #f2f2f2;
                border-left: none;
                border-top: none;
                margin-top: 1px;
                margin-left: 1px;

    [role='menubar']

        float: left;

        li
            &:first-child
                border-top-left-radius: 3px;
                border-bottom-left-radius: 3px;

                a
                    text-indent: -50000em;
                    background: transparent url("/img/sprites.png") no-repeat 50% -37px;
                    padding: 10px 19px;

    [role='adminmenu']

        float: right;

        li
            &:first-child
                border-left: 1px solid #c2c4d4;

            &:last-child
                border-right: none;


